<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>About</title>
    <link rel="stylesheet" type="text/css" href="/css/singlepost.css">
</head>
<body>
<%- include('partials/navbar.ejs') %>
<div class="singlepost">
    <%- include('partials/post.ejs', {post: posts}) %>
</div>
<div class="button-wrap">
    <a class="delete" data-del="<%= posts.id %>">
        <button type="submit">Delete Post</button>
    </a>
</div>

<%- include('partials/footer.ejs') %>
<script>
    const delreq = document.querySelector('a.delete');
    delreq.addEventListener('click', () => {
        const endpoint = `/posts/${delreq.dataset.del}`;
        fetch(endpoint, {
            method: 'DELETE',
        }).then(window.location.href = '/')
    });
</script>
</body>
</html>